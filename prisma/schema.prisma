// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id          BigInt     @id @default(autoincrement())
  password    String
  email       String?
  avatar      String?
  introduce   String?
  create_time DateTime   @default(now())
  update_time DateTime   @updatedAt
  tools       tool[]
  skills      skill[]
  bookmarks   bookmark[]
}

model tool {
  id          BigInt   @id @default(autoincrement())
  img_src     String
  label       String
  link        String
  user        user     @relation(fields: [userId], references: [id])
  userId      BigInt
  create_time DateTime @default(now())
  update_time DateTime @updatedAt
}

model skill {
  id          BigInt   @id @default(autoincrement())
  img_src     String
  label       String
  description String
  user        user     @relation(fields: [userId], references: [id])
  userId      BigInt
  create_time DateTime @default(now())
  update_time DateTime @updatedAt
}

model bookmark {
  id          BigInt   @id @default(autoincrement())
  img_src     String
  label       String
  link        String
  user        user     @relation(fields: [userId], references: [id])
  userId      BigInt
  create_time DateTime @default(now())
  update_time DateTime @updatedAt
}
